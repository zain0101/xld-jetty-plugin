 xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">
    <rule name="ExecuteJettyChangeLog" scope="deployed">
        <conditions>
            <type>jetty.DeployedApp</type>
            <operation>CREATE</operation>
            <operation>DESTROY</operation>
            <operation>MODIFY</operation>
        </conditions>
        <planning-script-path>jetty/rule.sh</planning-script-path>
    </rule>
</rules>
